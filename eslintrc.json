{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "indent": ["warning", 4],
        "linebreak-style": ["warning", "unix"],
        "quotes": ["warning", "single"],
        "semi": ["warning", "always"],
        "no-unused-vars": 0
    }
}